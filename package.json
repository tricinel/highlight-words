{
  "name": "highlight-words",
  "version": "1.0.5",
  "description": "Split a piece text into multiple chunks based on a search query, allowing you to highlight the matches.",
  "engines": {
    "node": ">= 10",
    "npm": ">= 6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tricinel/highlight-words.git"
  },
  "bugs": {
    "url": "https://github.com/tricinel/highlight-words/issues"
  },
  "homepage": "https://github.com/tricinel/highlight-words#readme",
  "author": "Bogdan Lazar",
  "license": "MIT",
  "keywords": [
    "string",
    "search",
    "highlight",
    "regex"
  ],
  "files": [
    "dist"
  ],
  "eslintIgnore": [
    "node_modules",
    "dist",
    "coverage"
  ],
  "main": "dist/lib/index.js",
  "module": "dist/lib-esm/index.js",
  "browser": "dist/bundles/highlight-words.js",
  "scripts": {
    "prebuild": "cross-env rimraf dist",
    "build": "rollup -c",
    "watch": "rollup -cw",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test:ci": "jest --runInBand --ci",
    "test": "jest",
    "test:mutations": "stryker run",
    "release": "release-it"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-transform-typescript": "^7.9.4",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-typescript": "^7.9.0",
    "@stryker-mutator/babel-transpiler": "^3.1.0",
    "@stryker-mutator/core": "^3.1.0",
    "@stryker-mutator/jest-runner": "^3.1.0",
    "@stryker-mutator/typescript": "^3.1.0",
    "@types/jest": "^25.2.1",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-frontwerk-typescript": "^1.0.2",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^25.3.0",
    "jest-watch-typeahead": "^0.5.0",
    "lint-staged": "^10.1.3",
    "precise-commits": "^1.0.2",
    "prettier": "^2.0.4",
    "release-it": "^13.5.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.6.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-typescript2": "^0.27.0",
    "typescript": "^3.8.3"
  }
}
